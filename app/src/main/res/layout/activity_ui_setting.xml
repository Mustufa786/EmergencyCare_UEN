<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.dmu.uen_ec.ui.DesingActivity"/>
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DesingActivity"


        >

        <LinearLayout
            android:id="@+id/GrpCRFA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DESIGN YOUR APP"


                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--cra1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">





                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

            <!--cra2-->
            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question Label Size"


                        />


                    <RadioGroup

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_small"
                            android:textSize="16sp"
                            android:text="small" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_normal"
                            android:checked="false"
                            android:text="Normal" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_larage"
                            android:textSize="22sp"
                            android:text="Large" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_xlarage"
                            android:textSize="26sp"
                            android:text="Extra Large" />



                    </RadioGroup>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question Label Size Normal"
                        android:id="@+id/labqexp"



                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RadioButton Label Size"


                        />


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_rb_small"
                            android:textSize="16sp"
                            android:text="small" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_rb_normal"
                            android:checked="false"
                            android:text="Normal" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_rb_larage"
                            android:textSize="22sp"
                            android:text="Large" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_rb_xlarage"
                            android:textSize="26sp"
                            android:text="Extra Large" />



                    </RadioGroup>


                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"


                        android:text="Radiobutton Label Size Normal"
                        android:id="@+id/rbexp"


                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checkbox Label Size"


                        />


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        >


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_cb_small"
                            android:textSize="16sp"
                            android:text="small" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_cb_normal"
                            android:checked="false"
                            android:text="Normal" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_cb_larage"
                            android:textSize="22sp"
                            android:text="Large" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_cb_xlarage"
                            android:textSize="26sp"
                            android:text="Extra Large" />



                    </RadioGroup>


                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="left"
                        android:layout_marginLeft="20dp"


                        android:text="Checkbox Label Size Normal"
                        android:id="@+id/cbexp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"


                        android:background="@color/white"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Input Text  Size"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"


                        />


                    <RadioGroup

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_ed_small"
                            android:textSize="16sp"
                            android:text="small" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_ed_normal"
                            android:checked="false"
                            android:text="Normal" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_ed_larage"
                            android:textSize="22sp"
                            android:text="Large" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_ed_xlarage"
                            android:textSize="26sp"
                            android:text="Extra Large" />



                    </RadioGroup>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"


                        android:text="Editext Size Size Normal"
                        android:id="@+id/edexp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"


                        android:background="@color/white"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Type "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"


                        />


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_english"
                            android:textSize="16sp"
                            android:text="English" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_urdu"
                            android:checked="false"
                            android:text="Urdu" />





                    </RadioGroup>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view_wt_bound">


                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OK"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:onClick="@{() -> callback.btnclic()}"

                        />





                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </ScrollView>
</layout>

